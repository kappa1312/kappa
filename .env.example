# Kappa OS Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Anthropic API Configuration
# =============================================================================

# Your Anthropic API key (required)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# =============================================================================
# REQUIRED: Database Configuration
# =============================================================================

# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://kappa:kappa_password@localhost:5432/kappa_db

# Alternative: Use individual components
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=kappa
# POSTGRES_PASSWORD=kappa_password
# POSTGRES_DB=kappa_db

# =============================================================================
# OPTIONAL: Kappa Configuration
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
KAPPA_LOG_LEVEL=INFO

# Maximum number of parallel Claude sessions
KAPPA_MAX_PARALLEL_SESSIONS=5

# Session timeout in seconds (default: 3600 = 1 hour)
KAPPA_SESSION_TIMEOUT=3600

# Working directory for Kappa operations
KAPPA_WORKING_DIR=./workspace

# =============================================================================
# OPTIONAL: Claude Agent SDK Configuration
# =============================================================================

# Exit SDK mode after idle duration (milliseconds)
# CLAUDE_CODE_EXIT_AFTER_STOP_DELAY=30000

# Use alternative providers (uncomment one if needed)
# CLAUDE_CODE_USE_BEDROCK=1
# CLAUDE_CODE_USE_VERTEX=1

# =============================================================================
# OPTIONAL: LangGraph Configuration
# =============================================================================

# Enable LangSmith tracing (for debugging)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=ls__xxxxx
# LANGCHAIN_PROJECT=kappa-os

# =============================================================================
# OPTIONAL: Development Settings
# =============================================================================

# Enable debug mode (more verbose logging, development features)
KAPPA_DEBUG=false

# Enable hot reload for skills
KAPPA_HOT_RELOAD_SKILLS=true

# Metrics collection interval (seconds)
KAPPA_METRICS_INTERVAL=60
